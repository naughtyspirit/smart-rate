<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/smartrate_dialog_background"
    android:orientation="vertical">

    <EditText
        android:id="@+id/smartrate_feedback_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/smartrate_dialog_title_margin_top"
        android:hint="@string/smartrate_feedback_input_hint"
        android:textAppearance="@android:style/TextAppearance.DialogWindowTitle" />

    <Button
        android:id="@+id/smartrate_feedback_send_button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/smartrate_button_margin_top"
        android:text="@string/smartrate_send" />
</LinearLayout>